<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.alex.betweentwocities.MainActivity">

    <include layout="@layout/layout_tile_selection"
             android:id="@+id/building_icons"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/score_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:text="@string/str_score_city"
        />

    <include layout="@layout/layout_board"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_above="@id/score_btn"
             android:layout_below="@id/building_icons"
             android:layout_centerHorizontal="true"
        />

</RelativeLayout>
